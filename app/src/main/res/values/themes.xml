<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TriviaApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#900C3F</item>
        <item name="colorPrimaryVariant">#C70039</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TriviaApp.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FirstTheme" parent = "Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">#1A6C9E</item>
        <item name="android:textColor">#B8E1FA</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SecondTheme" parent = "Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#FFC333</item>
        <item name="colorPrimaryVariant">#FF5733</item>
        <item name="colorOnPrimary">#FF8300</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color.-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <!--style name="Theme.TriviaApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TriviaApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" /-->
</resources>