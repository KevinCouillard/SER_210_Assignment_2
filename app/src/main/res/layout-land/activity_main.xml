<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/basketball_trivia" >

    <fragment
        class="edu.quinnipiac.ser210.triviaapp.MainFragment"
        android:id="@+id/main_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"/>
    <fragment
        class="edu.quinnipiac.ser210.triviaapp.MainFragmentTwo"
        android:id="@+id/main_frag_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <fragment
            class="edu.quinnipiac.ser210.triviaapp.GameFragmentTwo"
            android:id="@+id/game_frag_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </FrameLayout>

</LinearLayout>